<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- AppBarLayout is a wrapper for a Toolbar in order to apply scrolling effects. -->
    <!-- Note that AppBarLayout expects to be the first child nested within a CoordinatorLayout -->

        <!-- Toolbar is the actual app bar with text and the action items -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#40c8ca"

             >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textSize="40sp"
                android:paddingLeft="90dp"
                android:textColor="#f17304"
                android:id="@+id/text"
                />
        </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="70dp"
        android:inputType="textEmailAddress"

        android:ems="10"
        android:id="@+id/mailid"
        android:background="@drawable/textview_border"
        android:hint="@string/hint1"
        android:textColorHint="#797979"
        android:textSize="25sp"
        android:textStyle="bold"
         android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"

        android:textColor="#262525"


        />


    <EditText
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="70dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/passwordid"
        android:background="@drawable/textview_border"
        android:hint="@string/hint2"
        android:textColorHint="#a3a3a3"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#181818"



        />

    <Button
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:text="Sign in"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:background="@drawable/button_border"
        android:textColor="#f17304"
        android:textSize="25sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="20sp"
        android:id="@+id/register"
        android:text="@string/register"
        android:textColor="#f17304"
        android:layout_gravity="center_horizontal"


        />


    <!-- This could also be included from another file using the include tag -->
    <!-- i.e `res/layout/content_main.xml` -->
    <!-- `app:layout_behavior` is set to a pre-defined standard scrolling behavior -->

</LinearLayout>


